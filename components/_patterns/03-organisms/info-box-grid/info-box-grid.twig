{% extends "@layouts/grid/grid.twig" %}

{% block grid_content %}
  {# Drupal content #}
  {% if grid_content %}
    {{ grid_content }}
  {# PL content in JSON #}
  {% else %}
    {% for box in boxes %}
      {% set class = "info-box" %}
      {% include "@molecules/info-box/info-box.twig"
        with {
          "infobox_title": box.infobox_title,
          "infobox_text": box.infobox_text,
          "infobox_link": box.infobox_link,
        }
      %}
    {% endfor %}
  {% endif %}
{% endblock %}
