{% embed "@layouts/main/main.twig" %}

  {# Override default main_header block #}
  {# {% block main_header %} #}
  {# {% endblock %} #}

  {# Override default main_header block #}
  {% block main_utilities %}
    {% if messages %}
      <div class="l-main__utilities-messages">
        {{ messages }}
      </div>
    {% endif %}

    {% if tabs %}
      <div class="l-main__utilities-tabs">
        {{ tabs }}
      </div>
    {% endif %}

    {{ main_nav }}
  {% endblock %}

  {# Override default main_content block #}
  {% block main_content %}
    <div class="l-main__article-content">
      <div class="l-main__article-title">
      {% include "@atoms/00-type/00-heading.twig"
        with {
          heading: {
            label: article_title,
            level: 1,
          }
        }
      %}
      </div>

      <div class="l-main__article-body">{{ body }}</div>
    </div>
  {% endblock %}

  {# Override default main_aside block #}
  {% block main_aside %}
    {{ searchbar  }}
  {% endblock %}

{% endembed %}


