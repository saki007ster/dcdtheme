{% embed "@layouts/main/main.twig" %}

  {# Override default main_header block #}
  {% block main_header %}
  {% endblock %}

  {# Override default main_content block #}
  {% block main_content %}
    <div class="l-main__system-content">

      {% if page_title %}
        <div class="l-main__system-title">
        {% include "@atoms/00-type/00-heading.twig"
          with {
            heading: {
              label: page_title,
              level: 1,
            }
          }
        %}
        </div>
      {% endif %}

      {{ content }}
    </div>

  {% endblock %}

  {# Override default main_aside block #}
  {% block main_aside %}

    <div class="l-main__system-aside">
      {{ searchbar  }}
    </div>

  {% endblock %}

{% endembed %}


